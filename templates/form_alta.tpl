            <div class="form-group">
                <label>Company</label>
                <input name="company" type="text" class="form-control" required>
            </div>
        </div>
        <div class="col-9">
            <div class="form-group">
                <label>Sector</label>
                <input name="sector" type="text" class="form-control" required>
            </div>
        </div>
        <div class="col-9">
            <div class="form-group">
                <label>Tiker</label>
                <input name="tiker" type="text" class="form-control" required>
            </div>
        </div>
